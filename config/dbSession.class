    // Constructor - connect to server and select db
    function dbSession() {
        if ( $this->link = mysql_connect($this->dbHost, $this->dbUser, $this->dbPass) ) {
            if ( !mysql_selectdb($this->dbName,$this->link) ) {
                $this->setError();
            }
        }
